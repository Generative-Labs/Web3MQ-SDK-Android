<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:hint="title"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/main_color"
        android:singleLine="true"
        android:lines="1"
        android:id="@+id/et_topic_title"
        android:paddingLeft="10dp"/>
    <EditText android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_topic_title"
        app:layout_constraintRight_toRightOf="@+id/et_topic_title"
        app:layout_constraintTop_toBottomOf="@+id/et_topic_title"
        android:background="@color/gray"
        android:hint="content"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/main_color"
        android:id="@+id/et_topic_content"
        android:paddingLeft="10dp"/>
    <Button android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/et_topic_content"
        app:layout_constraintRight_toRightOf="@+id/et_topic_content"
        app:layout_constraintTop_toBottomOf="@+id/et_topic_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_publish"
        android:text="publish"
        />
</androidx.constraintlayout.widget.ConstraintLayout>